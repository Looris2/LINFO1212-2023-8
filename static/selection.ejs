<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/selection.css">
    <link rel="stylesheet" href="/nav.css">
    <title>Index</title>
</head>
<body>
    <header>
        <div class="logo">Belgoteek</div>
        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
        <nav class="nav-bar">
            <ul>
                <li><a href="/" >Home</a></li>
                <li><a href="" class="active">Ma selection</a></li>
                <li><a href="/explore" >Explorer</a></li>
                <li><a href="#basdepage" >Contact</a></li>
                <li>
                    <h4 id="name-holder">
                        <% if ( typeof user !== 'undefined') { %>
                            <a><%= user.username %></a>
                            <ul><li><button onclick='location.href="/logout"'>DÃ©connexion</button></li></ul>
                        <% } else { %>
                            <a href="/auth">Login</a>
                        <% } %>
                      </h4>
                </li>
            </ul>
            <script>
                hamburger = document.querySelector(".hamburger");
                hamburger.onclick = function() {
                    navBar = document.querySelector(".nav-bar")
                    navBar.classList.toggle("active");
                }
            </script>
        </nav>
    </header>

    <div class="page">
        <% if(user){ %>
            <h1>Bienvenue</h1>
        <% }else{ %>
            <div class="page">
                <div class="box">
                    <div class="container">
                        <h1>Veuillez vous connecter afin de voir votre selection de livres</h1>

                        <a href="/auth">Connexion</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

</body>
</html>