<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/explore.css">
    <link rel="stylesheet" href="/nav.css">
    <title>Index</title>
</head>

<body>
    <header>
        <div class="logo">Belgoteek</div>
        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
        <nav class="nav-bar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/explore" class="active">Explorer</a></li>
                <li><a href="">Contact</a></li>
                <li>
                    <h4 id="name-holder">
                        <% if (typeof user !== 'undefined') { %>
                            <a>
                                <%= user.username %>
                            </a>
                            <ul>
                                <li><button onclick='location.href="/logout"'>Déconnexion</button></li>
                            </ul>
                        <% } else { %>
                            <a href="/auth">Login</a>
                        <% } %>
                    </h4>
                </li>
            </ul>
        </nav>
    </header>

    <div class="page">
        <div class="container-list">
            <% if (user) { %>
                <% if (books.length > 0) { %>
                    <h2>Résultats de la recherche :</h2>
                    <ul>
                        <% for (const book of books) { %>
                            <div class="container">
                                <li>
                                    <h2><%= book.title %></h2>
                                    <p><%= book.author %></p>
                                    <br>
                                    <h3><%= book.summary %></h3>
                                    <br>
                                    <p>ISBN : <%= book.isbn %></p>
                                    <br>
                                    <p><%= book.category %></p>
                                    <br>
                                    <p>Suggéré par : <%= book.suggestedEmail %></p>
                                    <br>
                                    <p>Validé par : <%= book.librarianId %></p>
                                    <br>
                                    <% if (!book.rented) { %>
                                        <form action="/rent" method="post">
                                            <input type="hidden" name="bookId" value="<%= book.id %>">
                                            <label for="duration">Durée de location (semaines) :</label>
                                            <input type="number" name="duration" min="2" max="6" required>
                                            <button class ="location__button" type="submit">Louer</button>
                                        </form>
                                        <br>
                                        <% if (user.role === 'bibliothécaire') { %>
                                            <form action="/delete" method="post">
                                                <input type="hidden" name="bookId" value="<%= book.id %>">
                                                <button class ="delete__button" type="submit">Supprimer</button>
                                            </form>
                                        <% } %>
                                    <% } else { %>
                                        <p>Livre loué jusqu'au <%= book.rentEndDate %></p>
                                    <% } %>
                                </li>
                            </div>
                        <% } %>
                    </ul>
                <% } else { %>
                    <p>Aucun livre trouvé.</p>
                <% } %>
            <% } else { %>
                <h1>Liste des livres de la bibliothèque.</h1>
                <% books.forEach(book => { %>
                    <div class="container">
                        <li>
                            <h2><%= book.title %></h2>
                            <p><%= book.author %></p>
                            <br>
                            <h3><%= book.summary %></h3>
                            <br>
                            <p>ISBN : <%= book.isbn %></p>
                            <br>
                            <p><%= book.category %></p>
                            <br>
                            <p>Suggéré par : <%= book.suggestedEmail %></p>
                            <br>
                            <p>Validé par : <%= book.librarianId %></p>
                            <% if (!book.rented && user) { %>
                                <form action="/rent" method="post">
                                    <input type="hidden" name="bookId" value="<%= book.id %>">
                                    <label for="duration">Durée de location (semaines) :</label>
                                    <input type="number" name="duration" min="2" max="6" required>
                                    <button class ="location__button" type="submit">Louer</button>
                                </form>
                                <br>
                                <% if (user.role === 'bibliothécaire') { %>
                                    <form action="/delete" method="post">
                                        <input type="hidden" name="bookId" value="<%= book.id %>">
                                        <button class ="delete__button" type="submit">Supprimer</button>
                                    </form>
                                <% } %>
                            <% } else { %>
                                <br>
                                <p>Livre loué jusqu'au <%= book.rentEndDate %></p>
                            <% } %>
                        </li>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <script>
        hamburger = document.querySelector(".hamburger");
        hamburger.onclick = function () {
            navBar = document.querySelector(".nav-bar");
            navBar.classList.toggle("active");
        };
    </script>

</body>

</html>
